<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details"
    android:orientation="vertical"
    android:background="#fff"
    >

    <TextView
        android:padding="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your KCSE Profile"
        android:textSize="@dimen/_20sdp"
        android:textColor="#000"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#fff"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingRight="@dimen/_8sdp"
        />
    <TextView
        android:id="@+id/clusters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your KCSE clusterpoints: 12"
        android:textSize="@dimen/_16sdp"
        android:textColor="#000"
        android:padding="@dimen/_10sdp"/>

    <TextView
        android:paddingTop="5dp"
        android:id="@+id/Grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Grade: A"
        android:textSize="@dimen/_16sdp"
        android:textColor="#000"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingStart="@dimen/_8sdp"/>
    <TextView
        android:paddingTop="5dp"
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total points: 84"
        android:textSize="@dimen/_16sdp"
        android:textColor="#000"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingStart="@dimen/_8sdp"/>
    <TextView
        android:id="@+id/Eng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="English : 12"
        android:textSize="@dimen/_16sdp"
        android:textColor="#000"
        android:paddingStart="@dimen/_8sdp"
        />

    <TextView
        android:id="@+id/kiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kiswahili: 12"
        android:textSize="@dimen/_16sdp"
        android:textColor="#000"
        android:paddingTop="@dimen/_8sdp"
        android:paddingStart="@dimen/_8sdp"/>
    <TextView
        android:id="@+id/maths"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mathematics: 12"
        android:textSize="@dimen/_16sdp"
        android:textColor="#000"
        android:padding="@dimen/_10sdp"/>
    <TextView
        android:id="@+id/SciA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Science 1: 12"
        android:textSize="@dimen/_16sdp"
        android:textColor="#000"
        android:padding="@dimen/_10sdp"/>
    <TextView
        android:id="@+id/SciB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Science B:12"
        android:textSize="@dimen/_16sdp"
        android:textColor="#000"
        android:padding="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/hum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Humanity: 12"
        android:textSize="@dimen/_16sdp"
        android:textColor="#000"
        android:padding="@dimen/_10sdp"/>
    <TextView
        android:id="@+id/applied"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Applied: 12"
        android:textSize="@dimen/_16sdp"
        android:textColor="#000"
        android:padding="@dimen/_10sdp"/>





</LinearLayout>